<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>Eigenschaften für eBook</comment>
<!-- eindeutige ID des Buchs (https://www.famkruithof.net/uuid/uuidgen) -->
<entry key="UUID"></entry>
<!-- ISBN -->
<entry key="ISBN"></entry>
<!-- Buch-Titel (Pflichtangabe) -->
<entry key="title"></entry>
<!-- Sub-Titel -->
<entry key="subtitle"></entry>
<!-- Sammlung, z.B. Titel einer Serie -->
<entry key="collection"></entry>
<!-- Position innerhalb der Sammlung (Band-Nummer) -->
<entry key="group-position"></entry>
<!-- Sprache -->
<entry key="language">de</entry>
<!-- Beschreibung -->
<entry key="description"></entry>
<!-- Author (Anzeige, Pflichtangabe) -->
<entry key="author"></entry>
<!-- Author (für Sortierung) -->
<entry key="authorFileAs"></entry>
<!-- Dateiname (default: Titel - Author.epub) -->
<entry key="filename"></entry>
<!-- Verlag -->
<entry key="publisher"></entry>
<!-- Schlagwörter/Genre (z.B. Humor, Fiction, Romance, ...) http://bisg.org/page/bisacedition -->
<entry key="subject"></entry>
<!-- Rechte/Lizenz (z.B. Public Domain) -->
<entry key="rights"></entry>
<!-- Datum der Veröffentlichung (yyyy-mm-dd) -->
<entry key="pubDate"></entry>
<!-- Cover-Bild (default cover.*) -->
<entry key="cover"></entry>
<!-- Inhaltsverzeichnis generieren? (true/false) -->
<entry key="toc">true</entry>
<!-- Verzeichnis-Einträge aus diesen Elementen erstellen (default: h1) -->
<entry key="toc-entries">h1, h2</entry>
<!-- Liste von weiteren Dateien -->
<entry key="additional-media"></entry>
</properties>
